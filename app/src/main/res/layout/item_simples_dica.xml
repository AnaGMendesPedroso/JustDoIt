<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagemItem"
        android:layout_width="410dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tituloDica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:gravity="center"
        android:text="Titulo dica"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descricaoDica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/cabin"
        android:gravity="fill_horizontal"
        android:text="descricao vaga descricao vagadescricao vagadescricao vagadescricao vagadescricao vagadescricao vagadescricao vaga"
        android:textColor="@color/grey"
        android:textSize="14dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tituloLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:fontFamily="@font/capriola"
        android:gravity="center"
        android:onClick="onClick"
        android:text="balballa ablalbal ablabla"
        android:textColor="@color/green"
        android:textSize="12dp"
        android:textStyle="bold" />

</LinearLayout>