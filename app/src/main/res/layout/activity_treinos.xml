<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreinosActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/treinoDeHoje"
        android:layout_marginTop="55dp"
    />

    <Button
        android:id="@+id/buttonCadastrarTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/capriola"
        android:text="@string/cadastrar_treino"
        android:visibility="invisible"
        app:backgroundTint="#009688"
        android:onClick="redirecionarCadastrarTreino"/>

    <Button
        android:id="@+id/buttonAtualizarTreinos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/capriola"
        android:text="Atualizar"
        android:visibility="visible"
        app:backgroundTint="#009688"
        android:onClick="atualizarTreinos"/>

</RelativeLayout>